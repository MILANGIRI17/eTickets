@model Actor
@{
    ViewData["Title"] = "Delete Actor";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation for @Model.FullName</h1>
        </p>
    </div>
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="form-group text-center">
                <img class="border-info rounded-circle" style="max-width:150px;" id="ProfilePicturePreview" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProfilePictureURL" class="form-label"></label>
                <input id="ProfilePicture" asp-for="ProfilePictureURL" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Bio" class="form-label"></label>
                <input asp-for="Bio" class="form-control" readonly />
                <span asp-vlidation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="submit" value="confirm" class="btn btn-danger float-end" />
                </form>
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#ProfilePicture").val();
        })
    </script>
}